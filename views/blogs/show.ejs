<script>
  
  $('#cssDisplay').hide();
  $('#jsDisplay').hide();
  $('#htmlB').addClass("Selected");
  
  $('#htmlB').click(function(){
    
  $('#htmlB').toggleClass("Selected");
  $('#cssB').removeClass("Selected");
  $('#jsB').removeClass("Selected");
    
  $('#cssDisplay').hide();
  $('#htmlDisplay').show();
  $('#jsDisplay').hide();
  }) 
  
  $('#cssB').click(function(){
    
   $('#cssB').toggleClass("Selected");
   $('#htmlB').removeClass("Selected");
  $('#jsB').removeClass("Selected");
    
  $('#cssDisplay').show();
  $('#htmlDisplay').hide();
  $('#jsDisplay').hide();
  })
  
   $('#jsB').click(function(){
     
   $('#jsB').toggleClass("Selected");
   $('#cssB').removeClass("Selected");
  $('#htmlB').removeClass("Selected");
     
  $('#jsDisplay').show();
  $('#htmlDisplay').hide();
  $('#cssDisplay').hide();
  })
  
  
</script>
  

