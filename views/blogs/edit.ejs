<div class = "ui main text container segment">

  <form class = "ui form" action="/blogs/<%= blog._id %>?_method=PUT" method = "POST">
    
    
      <div class = "field">
      <label>HTML</label>
       <textarea  id="htmlarea" type = "text" name = "blog[html]" spellcheck="false" readonly></textarea>
        </div>
    
     <div class = "field">
        <label>CSS</label>
     <textarea spellcheck="false" id="cssarea" type = "text" name = "blog[css]" spellcheck="false" readonly></textarea>
        </div>
    
    
      <div class = "field">
        <label>JAVA SCRIPT</label>
        <textarea spellcheck="false" id="jsarea" name = "blog[javascript]" spellcheck="false" readonly></textarea> 
     </div>
    
    
    
    
      
    
     <div class = "field">
        <label>Image</label>
     <input type = "text" name = "blog[image]" value="<%= blog.image  %>">
        </div>
    
      <div class = "field">
        <label>Blog content</label>
        <textarea name = "blog[body]"><%= blog.body  %></textarea>
     </div>
    
  
          <input class="ui  big  violet button" type = "submit" >
  </form>
</div>

<script>
    function transferhtml() {
 var htmltext = document.getElementById('html').value;
 document.getElementById("htmlarea").innerHTML = htmltext;
   //console.log(htmltext);
}
     function transfercss() {
 var csstext = document.getElementById('css').value;
 document.getElementById("cssarea").innerHTML = csstext;
  // console.log(htmltext);
}
  
  
       function transferjs() {
 var jstext = document.getElementById('js').value;
 document.getElementById("jsarea").innerHTML = jstext;
  // console.log(htmltext);
}
  
  
  
 setInterval(transferhtml,10); 
 setInterval(transfercss,10); 
 setInterval(transferjs,10); 

  
  
  
  $(document).ready(function(){
    $("#hidehtml").click(function(){
        $("#html").toggleClass("hide");
      
      
       if ($("#hidehtml").text() == "Hide HTML")
       $(this).text("Show HTML")
    else
       $(this).text("Hide HTML");
      
    });
});
  
  
  
  
  
    $(document).ready(function(){
    $("#hidecss").click(function(){
        $("#css").toggleClass("hide");
      
      
      
      
          if ($("#hidecss").text() == "Hide CSS")
       $(this).text("Show CSS")
    else
       $(this).text("Hide CSS");
    });
});
  
  
 
  
  
  
    $(document).ready(function(){
    $("#hidejs").click(function(){
        $("#js").toggleClass("hide");
      
      
      
          if ($("#hidejs").text() == "Hide JAVASCRIPT")
       $(this).text("Show JAVASCRIPT")
    else
       $(this).text("Hide JAVASCRIPT");
    });
});


  
  
  
  
  
</script>





